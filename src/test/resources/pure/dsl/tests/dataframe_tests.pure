// Helper function for testing
function <<access.private>> meta::pure::dsl::tests::assertEquals(expected: String[1], actual: String[1]): Boolean[1]
{
   if($expected != $actual)
   {
      print('Expected: ' + $expected + '\nActual: ' + $actual);
      false;
   }
   else
   {
      true;
   }
}
